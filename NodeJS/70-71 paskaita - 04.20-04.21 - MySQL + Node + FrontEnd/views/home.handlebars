<script>
  document.querySelectorAll("ul .delete").forEach(btn => {
    btn.addEventListener("click", e => {
      fetch(`/api/marskiniai/${e.target.id}`, {
        method : "DELETE"
      })
      .then(e.target.parentElement.remove());
      //.then(location.reload());
    });
  });
</script>